  "main": "dist/src/cli.js",
  "types": "dist/src/HttpsLocalhost.d.ts",
  "scripts": {
    "start": "npm run build && node dist/src/cli.js",
    "build": "tsc",
    "dev": "npx ts-node src/cli.ts",
