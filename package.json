  },
  "homepage": "https://github.com/daquinoaldo/https-localhost#readme",
  "devDependencies": {
    "@types/finalhandler": "^1.1.0",
    "@types/serve-static": "^1.13.5",
    "@types/update-notifier": "^5.0.0",
    "nodemon": "^2.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
